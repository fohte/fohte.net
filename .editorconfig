root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown
[*.md]
trim_trailing_whitespace = false

# MDX files (same as Markdown)
[*.mdx]
trim_trailing_whitespace = false
indent_style = unset
indent_size = unset
