{
  "rules": {
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false,
      "ja-no-successive-word": {
        "allow": ["/…/"]
      },
      "ja-no-mixed-period": {
        "periodMark": "。",
        "allowPeriodMarks": [":"]
      },
      "ja-no-weak-phrase": false,
      "max-comma": false,
      "no-doubled-joshi": {
        "severity": "warning"
      }
    }
  },
  "plugins": {
    "@textlint/markdown": {
      "extensions": [".mdx"]
    }
  }
}
